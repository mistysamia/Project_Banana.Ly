    <!-- For SHrink and Toggle  Starts -->

    <script>
        function check_this_URL() {
            var url = document.getElementById('fullUrl').value;
            var btn = document.getElementById('shrinkButton');
            if (url.substring(0, 30) == "https://bananaly.herokuapp.com"
                || url.substring(0, 29) == "http://bananaly.herokuapp.com"
                || url.substring(0, 22) == "https://localhost:5000"
                || url.substring(0, 21) == "http://localhost:5000"
                || url.substring(0, 14) == "localhost:5000") {
                btn.disabled = true;
                alert("Can't shrink links of this website...");
            }
            else {
                btn.disabled = false;
            }
        }
        function onToggle() {
            const tog_btn = document.getElementById("toggle");
            console.log(tog_btn);
            if (tog_btn.value == "monetized") {
                tog_btn.value = "not_monetized";
                var x = document.getElementById("alert1");
                x.className = "show";
                console.log("1");
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
            }
            else {
                tog_btn.value = "monetized";
                var x = document.getElementById("alert2");
                x.className = "show";
                console.log("2");
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
            }
        }
    </script>
